.Form
  .Form__Item
    %p.Form__Item__Label
      %span.Form__Item__Label__Required 必須
      氏名
    %input{type:"text" , class:"Form__Item__Input" , placeholder:"例）山田 太郎"}
  .Form__Item
    %p.Form__Item__Label
      %span.Form__Item__Label__Required 必須
      フリガナ
    %input{type:"text" , class:"Form__Item__Input" , placeholder:"例）ヤマダ タロウ"}
  .Form__Item
    %p.Form__Item__Label
      %span.Form__Item__Label__Required 必須
      メールアドレス
    %input{type:"email" , class:"Form__Item__Input" , placeholder:"例）example@gmail.com"}
  .Form__Item
    %p.Form__Item__Label
      %span.Form__Item__Label__Required 任意
      電話番号
    %input{type:"text" , class:"Form__Item__Input" , placeholder:"例）090-0000-0000"}
  .Form__Item
    %p.Form__Item__Label
      %span.Form__Item__Label__Required 任意
      チェックボックス
    .Form__Item__Radio
      %input{type:"radio" , name:"radio" , class:"Form__Item__Radio__Input" , id:"radio-01" , checked:"checked"}
      %label{for:"radio-01"} 商品について聞きたい
      %br
      %input{type:"radio" , name:"radio" , class:"Form__Item__Radio__Input" , id:"radio-02"}
      %label{for:"radio-02"} 気軽に訪問したい
      %br
      %input{type:"radio" , name:"radio" , class:"Form__Item__Radio__Input" , id:"radio-03"}
      %label{for:"radio-03"} その他
      %br
  .Form__Item
    %p.Form__Item__Label.Form__Item__isMsg
      %span.Form__Item__Label__Required 必須
      お問い合わせ内容
    %textarea.Form__Item__Textarea
  %input{type:"submit" , class:"Form__Btn" , value:"送信する"}