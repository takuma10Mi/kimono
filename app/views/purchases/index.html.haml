.purchase-index
  .purchase-index__container
    .purchase-index__container__content
      .purchase-index__container__content__title
        %span 商品購入ページ
      .purchase-index__container__content__body
        .purchase-index__container__content__body__box
          .purchase-index__container__content__body__box__left
            .purchase-index__container__content__body__box__left__contact
              %p.Form__Item__Label{style:"margin: 0;"}
                %span.Form__Item__Label__Required 必須
                連絡先情報
              %input{type:"text" , class:"select-box" , placeholder:"メールアドレス"}
              %input{type:"text" , class:"select-box" , placeholder:"電話番号"}
            .purchase-index__container__content__body__box__left__claim
              %p.Form__Item__Label{style:"margin: 0;"}
                %span.Form__Item__Label__Required 必須
                請求先情報
              %input{type:"text" , class:"select-box" , placeholder:"姓名"}
              .purchase-index__container__content__body__box__left__claim__post
                %span{ style: "margin-left: 0;" } 〒
                %input{type:"text" , class:"select-box" , placeholder:"000"}
                %span ー
                %input{type:"text" , class:"select-box" , placeholder:"0000"}
              %select.select-box{prompt: "--"}
              %input{type:"text" , class:"select-box" , placeholder:"市区名"}
              %input{type:"text" , class:"select-box" , placeholder:"町村名、番地"}
              %input{type:"text" , class:"select-box" , placeholder:"建物名、部屋番号など（任意）"}
            %button.buy-button{type:"submit" , id:"buy_button"} お支払いへ進む
          .purchase-index__container__content__body__box__center
          %aside.purchase-index__container__content__body__box__right
            %button.purchase-index__container__content__body__box__right__response
              .purchase-index__container__content__body__box__right__response__text
                %span 注文概要・クーポン入力
              %p.purchase-index__container__content__body__box__right__response__price
                25,000円
            .purchase-index__container__content__body__box__right__overview
              .purchase-index__container__content__body__box__right__overview__list
                .purchase-index__container__content__body__box__right__overview__list__image
                  = image_tag "product-img.jpg"
                .purchase-index__container__content__body__box__right__overview__list__info
                  %p.purchase-index__container__content__body__box__right__overview__list__info__title
                    テーラード・ジャケット
                  %p.purchase-index__container__content__body__box__right__overview__list__info__sex
                    男性
                  %p.purchase-index__container__content__body__box__right__overview__list__info__size
                    L
                %p.purchase-index__container__content__body__box__right__overview__list__price
                  25,000円
              %p.purchase-index__container__content__body__box__right__overview__comment
                着丈は〇〇cm、バストは〇〇cm、袖丈は〇〇cm、肩幅は〇〇cmでお願いします。
              .purchase-index__container__content__body__box__right__overview__discount
                %input{type:"text" , class:"select-box" , placeholder:"Gift Cord"}
                %button.discount-button{type:"button" , id:"discount_button"} 適用する
              .purchase-index__container__content__body__box__right__overview__total
                %p 合計
                %p.purchase-index__container__content__body__box__right__overview__total__price
                  25,000円